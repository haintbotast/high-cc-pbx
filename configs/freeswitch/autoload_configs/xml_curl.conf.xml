<!-- =============================================================================
     mod_xml_curl Configuration
     Description: Fetch directory, dialplan, configuration from voip-admin API
     ============================================================================= -->

<configuration name="xml_curl.conf" description="cURL XML Gateway">
  <bindings>
    <!-- Directory (extension authentication) -->
    <binding name="directory">
      <param name="gateway-url" value="http://192.168.1.100:8080/freeswitch/directory" bindings="directory"/>
      <param name="gateway-credentials" value="freeswitch:API_KEY_HERE"/>
      <param name="timeout" value="5"/>
      <param name="enable-cacert-check" value="false"/>
      <param name="disable-100-continue" value="true"/>
    </binding>

    <!-- Dialplan (call routing) -->
    <binding name="dialplan">
      <param name="gateway-url" value="http://192.168.1.100:8080/freeswitch/dialplan" bindings="dialplan"/>
      <param name="gateway-credentials" value="freeswitch:API_KEY_HERE"/>
      <param name="timeout" value="5"/>
      <param name="enable-cacert-check" value="false"/>
      <param name="disable-100-continue" value="true"/>
    </binding>

    <!-- Configuration (optional - for dynamic configs) -->
    <binding name="configuration">
      <param name="gateway-url" value="http://192.168.1.100:8080/freeswitch/configuration" bindings="configuration"/>
      <param name="gateway-credentials" value="freeswitch:API_KEY_HERE"/>
      <param name="timeout" value="5"/>
      <param name="enable-cacert-check" value="false"/>
      <param name="disable-100-continue" value="true"/>
    </binding>
  </bindings>
</configuration>
