<!-- =============================================================================
     FreeSWITCH Core Configuration
     Target: 600-800 concurrent calls
     Hardware: 16 cores, 64 GB RAM per node
     ============================================================================= -->

<configuration name="switch.conf" description="Core Configuration">
  <settings>
    <!-- Performance -->
    <param name="max-sessions" value="3000"/>
    <param name="sessions-per-second" value="100"/>
    <param name="rtp-start-port" value="16384"/>
    <param name="rtp-end-port" value="32768"/>

    <!-- Memory -->
    <param name="core-db-dsn" value="pgsql://host=172.16.91.100 dbname=voip user=freeswitch password=PASSWORD options='-c search_path=voip'"/>

    <!-- Logging -->
    <param name="loglevel" value="info"/>
    <param name="colorize-console" value="true"/>
    <param name="max-db-handles" value="50"/>
    <param name="db-handle-timeout" value="10"/>

    <!-- RTP -->
    <param name="rtp-enable-zrtp" value="false"/>

    <!-- CPU/Threading -->
    <param name="cpu-idle-smoothing-depth" value="30"/>
    <param name="min-idle-cpu" value="25"/>
  </settings>
</configuration>
